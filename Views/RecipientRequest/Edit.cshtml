@model FoodDonationWebApp.Models.RecipientRequest

@{
    ViewData["Title"] = "Edit Recipient Request";
}

<h2>Edit Recipient Request</h2>

<form asp-action="Edit" method="post">
    <input asp-for="Recipient.FirstName" type="hidden" />
    <input asp-for="RecipientId" type="hidden" />

    <div class="form-group">
        <label>Recipient Name</label>
        <input type="text" class="form-control" value="@Model.Recipient.FirstName @Model.Recipient.LastName" readonly />
    </div>

    <div class="form-group">
        <label asp-for="RequestedFoodType">Food Type</label>
        <input asp-for="RequestedFoodType" class="form-control" readonly />
        <input asp-for="RequestedFoodType" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" readonly />
        <input asp-for="Quantity" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="RequestStatus" class="control-label"></label>
        <select asp-for="RequestStatus" class="form-control" asp-items="Html.GetEnumSelectList<FoodDonationWebApp.Models.RequestStatus>()"></select>
        <span asp-validation-for="RequestStatus" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
